{
  "name": "knowledge-contracts",
  "description": "Knowleadge Contracts",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./build",
    "lint": "standard | snazzy; solium -d contracts/",
    "coverage": "solidity-coverage",
    "postinstall": "truffle install",
    "build": "npm run clean && truffle compile",
    "develop": "truffle develop",
    "deploy": "truffle migrate",
    "test": "truffle test",
    "doctoc": "doctoc --github --title \"## Contents\" README.md"
  },
  "dependencies": {
    "truffle": "^4.0.1"
  },
  "devDependencies": {
    "doctoc": "^1.3.0",
    "eth-gas-reporter": "^0.1.1",
    "rimraf": "^2.6.2",
    "run-with-testrpc": "^0.3.0",
    "snazzy": "^7.0.0",
    "solium": "^1.1.0",
    "solidity-coverage": "^0.4.7",
    "standard": "^10.0.3"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "artifacts",
      "assert",
      "contract",
      "web3"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knowledge/knowledge-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/knowledge/knowledge-contracts/issues"
  },
  "homepage": "https://github.com/knowledge/knowledge-contracts#readme"
}
